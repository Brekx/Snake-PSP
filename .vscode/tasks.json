{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "echo",
			"type": "shell",
			"command": "echo Hello"
		},
		{
			"label": "make",
			"type": "shell",
			"command": "docker run -it --rm -v ${PWD}:/src -w /src pspdev:v4 make",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "silent"
			}
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "docker run -it --rm -v ${PWD}:/src -w /src pspdev:v4 make clean",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "silent"
			}
		},
		{
			"label": "copy",
			"type": "shell",
			"command": "until [ -d /Volumes/PSPCARD ]; do sleep 1; done && cp EBOOT.PBP /Volumes/PSPCARD/PSP/GAME/Snake/ && sleep 2 && diskutil unmount /Volumes/PSPCARD",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "silent"
			}
		},
		{
			"label": "all",
			"dependsOrder": "sequence",
			"dependsOn":["make", "copy", "clean"],
			"presentation": {
				"reveal": "silent"
			}
		}

	]
}